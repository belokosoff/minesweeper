{
    "name": "belokosoff/minesweeper",
    "require": {
        "wp-cli/php-cli-tools": "^0.12.5"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "belokosoff\\minesweeper\\": "src/"
        }
    },
    "bin": [
        "bin/minesweeper"
    ],
    "scripts": {
        "phpcs": "phpcs --standard=PSR12 src bin",
        "phpcs-fix": "phpcbf --standard=PSR12 src bin"
    }
}